<!doctype html>
<html lang="en">

<head>
    <%- include('partials/head.ejs')%>
    <style>
        body {
            max-width: 1200px;
            box-sizing: border-box;
            margin: 0 auto;
            height: 600px;
            padding: 10px;
        }

        .container {
            height: 600px;
            background-image: url(/images/back_login.png);
            background-repeat: no-repeat;
            opacity: 0.9;
            z-index: 1;
        }

        small {
            color: red;
        }

        .title {
            margin: auto;
            color: rgb(3, 3, 19);
            text-shadow: 1px -2px 1px rgb(175, 51, 51);
            width: 289px;
            background-color: #5786ec8f;
            /* opacity: 0.5; */
            border-radius: 30px;
            box-shadow: 3px 3px 3px #ffff1a;
            margin-top: 20px;
        }

        .user {
            color: rgb(3, 3, 19);
            text-shadow: 1px -2px 1px rgb(175, 51, 51);
            font-size: 20px;
            font-weight: 700;
        }

        .foot {
            font-size: 20px;
            font-weight: 700;
            color: rgb(255, 255, 255);
            text-shadow: 1px -2px 1px rgb(175, 51, 51);
        }

        small {
            text-shadow: 1px 1px 0px #1305fe;
            text-decoration-line: overline
        }
    </style>
</head>

<body>
    <main class="container">
        <header class="row">
            <%- include('partials/header.ejs')%>
        </header>
        <section class="row" id="app">
            <div class="col-6 offset-3 mt-3">
                <form action="board">
                    <div class="form-group">
                        <label for="username" class="user">UserName</label>
                        <input type="text" class="form-control" name="username" id="username"
                            aria-describedby="UsernameHelpId" placeholder="Username">
                        <small id="UsernameHelpId" class="form-text text-white invisible smail-bok">
                            The name cannot be less than 3 characters!
                        </small>
                    </div>
                    <div class="form-group">
                        <hr>
                        <button type="button" id="play" class="btn btn-primary">Play Game</button>
                    </div>
                </form>
            </div>
        </section>
        <footer class="row">
            <%- include('partials/footer.ejs')%>
        </footer>
    </main>
    <script src="assets/user.bundle.js"></script>
    <script
        src="assets/vendors-node_modules_autobind-decorator_lib_esm_index_js-node_modules_class-validator_esm5_de-157a7d.bundle.js">
    </script>
    <%- include('partials/foot.ejs')%>
</body>

</html>