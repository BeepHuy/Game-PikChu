<!doctype html>
<html lang="en">

<head>
    <%- include('partials/head.ejs')%>
    <style>
        .container{
            background-image: url(/images/Back_gane.png);
        }
        .title{
            margin: auto;
            color: rgb(3, 3, 19);
            text-shadow: 1px -2px 1px rgb(175, 51, 51);
            width: 289px;
            background-color: #5786ec8f;
            /* opacity: 0.5; */
            border-radius: 30px;
            box-shadow: 3px 3px 3px #ffff1a;
            margin-top: 20px;
        }
        .gameItem {
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 5px 10px 10px #92cbef;
            height: 100px;
            background-color: #afe7f073;
        }

        .unmatched {
            background-color: #e8f52e;
        }

        .app-game {
            margin: 0 auto;
        }
        hr{
            border: 2px solid rgb(9, 9, 44);
            box-shadow: 2px 2px 2px #92cbef;
        }
        .foot{
            font-size: 20px;
            font-weight: 700;
            color: rgb(255, 255, 255);
            text-shadow: 1px -2px 1px rgb(175, 51, 51);
        }
    </style>
</head>

<body>
    <main class="container">
        <header class="row">
            <%- include('partials/header.ejs')%>
        </header>
        <hr>
        <div id="app">
            <section class="row app-game" id="board">
                <!-- <div class="col-2 gameItem m-2 p1 text-center">
                    <img src="images/1.png" alt="" class="img-fluid">
                </div> -->
            </section>
            <section class="row">
                <div class="col" id="reset">
                    <hr>
                    <button class="btn btn-primary" id="reset">Reset Game</button>
                    <button class="btn btn-danger" id="cancel" ><a href="/login">Cancel Game</a></button>
                </div>
            </section>
        </div>

        <footer class="row">
            <%- include('partials/footer.ejs')%>
        </footer>
    </main>
    <script src="assets/main.bundle.js"></script>
    <script
        src="assets/vendors-node_modules_autobind-decorator_lib_esm_index_js-node_modules_lodash_lodash_js.bundle.js">
    </script>

    <%- include('partials/foot.ejs')%>
</body>

</html>